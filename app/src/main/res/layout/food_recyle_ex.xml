<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="음식 명"
        app:layout_constraintRight_toLeftOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="총 칼로리"
        app:layout_constraintLeft_toRightOf="@id/textView11"
        app:layout_constraintRight_toLeftOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@id/textView13" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:text="탄수화물"
        app:layout_constraintLeft_toRightOf="@id/textView12"
        app:layout_constraintRight_toLeftOf="@id/textView14"
        app:layout_constraintTop_toTopOf="@id/textView14" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"

        android:layout_height="wrap_content"
        android:text="단백질"
        app:layout_constraintRight_toLeftOf="@id/textView15"
        app:layout_constraintLeft_toRightOf="@id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/add_food" />
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"

        android:layout_height="wrap_content"
        android:text="지방"
        app:layout_constraintRight_toLeftOf="@id/textView16"
        app:layout_constraintLeft_toRightOf="@id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/add_food" />
    <TextView
    android:id="@+id/textView16"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
        app:layout_constraintRight_toLeftOf="@id/textView17"
    app:layout_constraintLeft_toRightOf="@id/textView15"
    app:layout_constraintTop_toBottomOf="@+id/add_food" />
    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/add_food" />

    <Button
        android:id="@+id/add_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"


        android:text="추가"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/food_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/selected_view"
        app:layout_constraintTop_toBottomOf="@+id/textView13">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/food_recyleview_ex"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_food" />

    </LinearLayout>


    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="검색"
        app:layout_constraintEnd_toStartOf="@+id/add_food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_food" />


    <ScrollView
        android:id="@+id/selected_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/food_linear"
        tools:layout_editor_absoluteX="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/morning_food_recyle_selected"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>