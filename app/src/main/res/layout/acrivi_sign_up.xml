<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/nickname_check_textview"
        android:layout_width="95dp"
        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="@+id/signup_id"
        app:layout_constraintTop_toBottomOf="@+id/signup_nickname" />

    <TextView
        android:id="@+id/repassword_check_textview"
        android:layout_width="95dp"
        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="@+id/signup_id"
        app:layout_constraintTop_toBottomOf="@+id/signup_repassword" />

    <TextView
        android:id="@+id/e-mail_check_textview"
        android:layout_width="95dp"
        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="@+id/signup_id"
        app:layout_constraintTop_toBottomOf="@+id/signup_email" />

    <ImageView
        android:id="@+id/my_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/hiclipart2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <EditText
        android:id="@+id/signup_repassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/signup_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signup_password"
        app:layout_constraintTop_toBottomOf="@+id/signup_password" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"


        android:ems="10"
        android:hint="이메일"
        android:inputType="textWebEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/signup_repassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signup_repassword"
        app:layout_constraintTop_toBottomOf="@+id/signup_repassword" />
    <EditText
        android:id="@+id/signup_nickname"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"

        android:ems="10"
        android:hint="닉네임"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/signup_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signup_email"
        app:layout_constraintTop_toBottomOf="@+id/signup_id" />

    <EditText
        android:id="@+id/signup_id"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="@id/image_upload_button"
        app:layout_constraintTop_toBottomOf="@id/image_upload_button" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="300dp"
        android:layout_marginTop="25dp"

        android:layout_height="40dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/signup_nickname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signup_id"
        app:layout_constraintTop_toBottomOf="@+id/signup_nickname" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_blue"
        android:stateListAnimator="@null"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="@+id/signup_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signup_email"
        app:layout_constraintTop_toBottomOf="@+id/signup_email" />

    <Button
        android:id="@+id/id_check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue2"
        android:stateListAnimator="@null"
        android:text="중복확인"
        app:layout_constraintBottom_toBottomOf="@+id/signup_id"
        app:layout_constraintStart_toEndOf="@+id/signup_id"
        app:layout_constraintTop_toTopOf="@+id/signup_id" />

    <Button
        android:id="@+id/nickname_check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue2"
        android:stateListAnimator="@null"
        android:text="중복확인"

        app:layout_constraintStart_toEndOf="@+id/signup_id"
        app:layout_constraintTop_toTopOf="@+id/signup_nickname" />

    <Button
        android:id="@+id/image_upload_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_green"
        android:stateListAnimator="@null"
        android:textColor="#ffffff"
        android:text="이미지 업로드"
        app:layout_constraintBottom_toTopOf="@+id/signup_id"
        app:layout_constraintEnd_toEndOf="@+id/my_imageView"
        app:layout_constraintStart_toStartOf="@+id/my_imageView"
        app:layout_constraintTop_toBottomOf="@+id/my_imageView"
        app:layout_constraintVertical_bias="0.454" />

    <TextView
        android:id="@+id/id_check_textview"
        android:layout_width="95dp"
        android:text="text"
        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="@+id/signup_id"
        app:layout_constraintTop_toBottomOf="@+id/signup_id" />


</androidx.constraintlayout.widget.ConstraintLayout>