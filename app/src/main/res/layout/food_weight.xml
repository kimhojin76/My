<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/add_foodweight_input"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="음식물 중량 입력"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/food_add_weight_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue"

        android:stateListAnimator="@null"
        android:text="입력"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/add_foodweight_input"
        app:layout_constraintStart_toStartOf="@+id/add_foodweight_input"
        app:layout_constraintTop_toBottomOf="@+id/add_foodweight_input" />


</androidx.constraintlayout.widget.ConstraintLayout>